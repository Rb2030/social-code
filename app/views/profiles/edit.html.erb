<%= form_for [@user,@profile] do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
    <%= f.label :bio %>
    <%= f.text_field :bio%>
  </div>

  <div class="field">
    <%= f.label "Programming Languages" %><br />
    <%= f.collection_check_boxes :language_ids, Language.all, :id, :language_type do |b| %>
      <div class="collection-check-box">
        <%= b.check_box %>
        <%= b.label %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
