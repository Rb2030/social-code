<%= form_for [@user,@profile] do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
    <%= f.label :bio %>
    <%= f.text_field :bio%>
  </div>

  <!-- # Checkbox part of the form that now works! -->
    <ul>
      <% Language.all.each do |language| %>
        <li>
          <%= check_box_tag "profile[language_ids][]", language.id, f.object.languages.include?(language) %>
          <%= language.language_type %>
        </li>
      <% end %>
    </ul>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
